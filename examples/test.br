function counter() {
  var count = 0

  function increment() {
    count++
  }
  function decrement() {
    count--
  }
  function get() {
    return count
  }

  return {
    increment: increment,
    decrement: decrement,
    get: get,
  }
}

const c = counter()

c.increment()
c.decrement()
c.increment()
c.increment()
console.output(c.get())
